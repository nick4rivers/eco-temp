<%= form_with(model: site, local: true) do |form| %>
<% if site.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(site.errors.count, "error") %> prohibited this site from being saved:</h2>

  <ul>
    <% site.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<hr>

<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :project_id %>
      <%= form.text_field :project_id, class: 'form-control' %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= form.label :description %>
  <%= form.text_area :description, class: 'form-control' %>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :latitude %>
      <%= form.text_field :latitude, class: 'form-control' %>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group">
      <%= form.label :longitude %>
      <%= form.text_field :longitude, class: 'form-control' %>
    </div>
  </div>
</div>

<hr>



<div class="form-group">
  <label class="btn btn-secondary">Upload Site Image <%= form.file_field :image, style: 'display:none;' %></label>

</div>





<hr>

<div class="actions">
  <%= form.submit class: "btn btn-primary" %>
</div>
<% end %>
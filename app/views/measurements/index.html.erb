<p id="notice"><%= notice %></p>

<h1>Measurements</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Moment</th>
      <th>Temperature</th>
      <th>Deployment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurement| %>
    <tr>
      <td><%= measurement.deployment.site.project.name %></td>
      <td><%= measurement.moment %></td>
      <td><%= measurement.temperature %> C</td>
      <td><%= measurement.deployment.deploy_date %></td>
      <td><%= link_to 'Show', measurement %></td>
      <td><%= link_to 'Edit', edit_measurement_path(measurement) %></td>
      <td><%= link_to 'Destroy', measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Measurement', new_measurement_path %>
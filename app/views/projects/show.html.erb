<p id="notice"><%= notice %></p>

<%= link_to 'Projects', projects_path, class: "btn btn-secondary" %>
<h2><%= @project.name %></h2>

<p>
  <strong>Description:</strong>
  <%= @project.description %>
</p>
<p><strong>Number of Sites: </strong><%= @project.count_sites %> </p>

<% if @project.sites.any? %>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Site Name</th>
      <th scope="col">Go to</th>
    </tr>
  </thead>
  <tbody>
    <% @project.sites.each do |site| %>
    <tr>
      <th scope="row"><%= site.name %></th>
      <td><%= link_to  "Site", site_path(site.id) %></td>
    </tr>
    <% end  %>
  </tbody>
</table>
<% end %>

<%= link_to 'Edit Project', edit_project_path(@project), class: "btn btn-secondary" %>
<%= link_to 'Add New Site', add_site_path(@project), class: "btn btn-secondary" %>